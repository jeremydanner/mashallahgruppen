{
    "name": "Mashallahgruppen",
    "description": "The Mashallahgruppen main website built with wordpress together with wordplate",
    "author": "HandelsMarketing <info@handelsmarketing.se>",
    "private": true,
    "scripts": {
        "dev": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "production": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "browser": "browser-sync start --proxy 'localhost:8888'",
        "build:styles": "node-sass public/themes/mashallahgruppen/assets/styles/mainSass.scss | cleancss --output public/themes/mashallahgruppen/public/styles/mainSass.css",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch:styles": "node-sass --source-map true --watch public/themes/mashallahgruppen/assets/styles/ --output public/themes/mashallahgruppen/public/styles/",
        "start": "npm-run-all --parallel browser watch:*"
    },
    "dependencies": {
      "query-string": "^4.3.0",
      "sanitize.css": "^4.1.0"
    },
    "devDependencies": {
        "laravel-mix": "^0.8.1",
        "browser-sync": "^2.18.6",
        "clean-css-cli": "^4.0.0",
        "node-sass": "^4.3.0",
        "npm-run-all": "^4.0.1"
    }
}
